       /usr/hdp/2.6.2.0-205/hadoop-hdfs/*,
       /usr/hdp/2.6.2.0-205/hadoop-hdfs/lib/*,
       /usr/hdp/2.6.2.0-205/hadoop-yarn/*,
       /usr/hdp/2.6.2.0-205/hadoop-yarn/lib/*
